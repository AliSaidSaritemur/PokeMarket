@{
    Layout = "beginnerLayout";
}
@using PokemonsMarketWeb.Models

@model User


<head>
  

</head>
<body>
    <h3 key=9>Create User</h3>
    <form asp-action="Create" asp-controller="Account" method="post">
        <div class="form-group">
            <label>
                <label key=0>Name:</label>  <span class="text-danger">*</span>
                <span asp-validation-for="@Model.name" class="text-danger"></span>
            </label>
            <input asp-for="@Model.name" class="form-control" />
        </div>

        <div class="form-group">
            <label>
                <label key=1>Surname</label>:
                <span class="text-danger">*</span>
                <span asp-validation-for="@Model.surname" class="text-danger"></span>

            </label>
            <input asp-for="@Model.surname" class="form-control" />
        </div>

        <div class="form-group">
            <label>
                <label key=2>Username</label>:

                <span class="text-danger">*</span>
                <span asp-validation-for="@Model.userName" class="text-danger"></span>
            </label>
            <input asp-for="@Model.userName" class="form-control" />
        </div>

        <div class="form-group">
            <label>
                Email:
                <span class="text-danger">*</span>
                <span asp-validation-for="@Model.mail" class="text-danger"></span>
            </label>
            <input asp-for="@Model.mail" class="form-control" />
        </div>

        <div class="form-group">
            <label>
                <label key=3>Phone</label>:
                <span class="text-danger">*</span>
                <span asp-validation-for="@Model.phone" class="text-danger"></span>
            </label>
            <input asp-for="@Model.phone" class="form-control" />
        </div>

        <div class="form-group">
            <label>
                <label key=4>Password</label>:

                <span class="text-danger">*</span>
                <span asp-validation-for="@Model.password" class="text-danger"></span>
            </label>
            <input asp-for="@Model.password" class="form-control" />
        </div>

        <div class="form-group">
            <label>
                <label key=5>Wallet</label>:

                <span class="text-danger">*</span>
                <span asp-validation-for="@Model.wallet" class="text-danger"></span>
            </label>
            <input asp-for="@Model.wallet" class="form-control" />
        </div>


        <div class="form-group text-right">
            <button type="submit" class="btn btn-primary" key=6>Create</button>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

    </form>
</body>
</html>


