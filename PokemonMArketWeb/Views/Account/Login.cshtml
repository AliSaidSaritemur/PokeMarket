@{
    Layout = "_Layout";
}
@using PokemonsMarketWeb.Models

@model LoginUser

<form  asp-action="Login" asp-controller="Account" method="post">
  <div class="imgcontainer">
    <img src="img_avatar2.png" alt="Avatar" class="avatar">
  </div>

  <div class="container">
    <label for="uname"><b>Username</b></label>
        <input type="text" placeholder="Enter Username"  asp-for="@Model.mail" class="form-control">

    <label for="psw"><b>Password</b></label>
        <input type="text" placeholder="Enter Password" asp-for="@Model.password" class="form-control">

    <button type="submit"  class="btn btn-primary">Login</button>
    <label>
     <input type="checkbox" checked="checked" name="remember"> Remember me
    </label>
  </div>

  <div class="container" style="background-color:#f1f1f1">
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Create">Create account</a>
  </div>
</form>

