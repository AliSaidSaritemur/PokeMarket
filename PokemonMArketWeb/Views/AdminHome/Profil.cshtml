@{
    Layout = "adminLayout";
}
@using PokemonsMarketWeb.Models

@model LoginUser
@{
    string username;
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }

        .column {
            float: left;
            width: 33.33%;
            padding: 10px;
            height: 300px; 
        }

      
        .row:after {
            content: "";
            display: table;
            clear: both;
        }

        .center {
            border: 5px;
            display: flex;
            justify-content: center;
        }
    </style>

    <script>
        function newLocation() {
            document.location.href = document.getElementById("searchUser").value;
        }
        }
    </script>
</head>
<body>

    <table class="table table-hover table-bordered">
        <thead>

            <tr>
                <th>Frist Name </th>
                <th>Last Name </th>
                <th> Wallet </th>
            </tr>

        </thead>
        <tbody>
           
                <tr>
                    <td>@ViewBag.user.name</td>
                <td>@ViewBag.user.surname</td>
                <td>@ViewBag.user.wallet</td>

                </tr>

        </tbody>
    </table>

      <form asp-action="Profil" asp-controller="adminHome" method="post">
       <input class="form-control" asp-for="@Model.password" type="text"  class="form-control" placeholder="Type comment..." />                         
            <button type="submit" class="btn btn-primary">Get User</button> 
              
    </form>


     @if(ViewBag.selectUser!=null){
        
        <br>
          <h2 class="text-center">@(ViewBag.selectUser.userName)'s Informations </h2>
       
        <table class="table table-hover table-bordered">
            <thead>

                <tr>
                    <th>Frist Name </th>
                    <th>Last Name </th>
                    <th> Wallet </th>
                </tr>

            </thead>
            <tbody>

                <tr>
                    <td>@ViewBag.selectUser.name</td>
                    <td>@ViewBag.selectUser.surname</td>
                    <td>@ViewBag.selectUser.wallet</td>

                </tr>

            </tbody>
        </table>

        <table class="table table-hover table-bordered">
            <thead>

                <tr>
                     <th> Role </th>
                    <th>Phone</th>
                    <th>Email </th>
                 
                </tr>

            </thead>
            <tbody>

                <tr>
                    <td>@ViewBag.selectUser.role  </td>
                    <td>@ViewBag.selectUser.phone </td>              
                    <td>@ViewBag.selectUser.mail</td>
                

                </tr>

            </tbody>
        </table>
<br>

       
     }
         
    @if (ViewBag.pokemons != null && ViewBag.selectUser != null && ViewBag.pokemons.Count>0)
    {
        <h2 class="text-center">@(ViewBag.selectUser.userName)'s Pokemons</h2>
        @for (int i = 0; i < ViewBag.pokemons.Count; i += 3)
    {
        <div class="row">


            <div class="column">
                    <a class="center" asp-action="Detail" asp-route-fileName="@ViewBag.pokemons[i].id"><img src="/Image/@(ViewBag.pokemons[i].species).jpg" width=40% height=40%></a>
                <br>
                <p class="center">  @ViewBag.pokemons[i].name</p>
                 <p class="center"><a asp-action="Remove" asp-route-fileName="@ViewBag.pokemons[i].id">Remove</a></p>
                    <p class="center "><a  asp-action="UpdatePokemon" asp-route-fileName="@ViewBag.pokemons[i].id">Update</a></p>
                    <p class="center">  @ViewBag.pokemons[i].price</p>
            </div>
                @if (i + 1 < ViewBag.pokemons.Count)
            {
                <div class="column">

                        <a class="center" asp-action="Detail" asp-route-fileName="@ViewBag.pokemons[i+1].id"><img src="/Image/@(ViewBag.pokemons[i+1].species).jpg" width=40% height=40%></a>
                    <br>
                        <p class="center"> @ViewBag.pokemons[i+1].name</p>
                        <p class="center"><a asp-action="Remove" asp-route-fileName="@ViewBag.pokemons[i+1].id">Remove</a></p>
                        <p class="center"><a asp-action="UpdatePokemon" asp-route-fileName="@ViewBag.pokemons[i+1].id">Update</a></p>
                    <p class="center">  @ViewBag.pokemons[i+1].price</p>

                </div>
            }
            @if (i + 2 < ViewBag.pokemons.Count)
            {

                <div class="column">
                        <a class="center" asp-action="Detail" asp-route-fileName="@ViewBag.pokemons[i+2].id"><img src="/Image/@(ViewBag.pokemons[i+2].species).jpg" width=40% height=40%></a>
                    <br>
                        <p class="center">  @ViewBag.pokemons[i+2].name</p>
                    <p class="center"><a asp-action="Remove" asp-route-fileName="@ViewBag.pokemons[i+2].id">Remove</a></p>
                        <p class="center"><a asp-action="UpdatePokemon" asp-route-fileName="@ViewBag.pokemons[i+2].id">Update</a></p>
                        <p class="center">  @ViewBag.pokemons[i+2].price</p>
                </div>
            }
               
        </div>
              <br />
         
    }
        
    }
 @if (ViewBag.selectUser != null)
        {
        <p class="center"><a class="btn btn-danger" asp-action="DeleteUser" asp-route-username=@ViewBag.selectUser.userName>Remove</a>&nbsp &nbsp <a class="btn btn-success" asp-action="UpdateUser" asp-route-username=@ViewBag.selectUser.userName>Update</a></p>
        }
</body>
</html>





