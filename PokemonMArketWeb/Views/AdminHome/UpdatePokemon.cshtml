@{
    Layout = "adminLayout";
}
@using PokemonsMarketWeb.Models

@model Pokemon


<h3>Update Pokemon</h3>

<form asp-action="UpdatePokemon" asp-controller="AdminHome" method="post">
    <div class="form-group">
        <label>
            Name: <span class="text-danger">*</span>
            <span asp-validation-for="@Model.name" class="text-danger"></span>
        </label>
        <input asp-for="@Model.name" class="form-control" />
    </div>

    <input asp-for="@Model.id" class="form-control" type="hidden" />
    <input asp-for="@Model.UserId" class="form-control" type="hidden" />

    <div class="select form-group">
        <select asp-for="@Model.species">
            <option value="Bulbasaur">Bulbasaur</option>
            <option value="Charmander">Charmander</option>
            <option value="Jigglypuff">Jigglypuff</option>
            <option value="Pikachu">Pikachu</option>
            <option value="Squirtle">Squirtle</option>
        </select>
    </div>

    <div class="form-group">
        <label>
            Power:

            <span class="text-danger">*</span>
            <span asp-validation-for="@Model.power" class="text-danger"></span>
        </label>
        <input asp-for="@Model.power" class="form-control" />
    </div>

    <div class="form-group">
        <label>
            Price:

            <span class="text-danger">*</span>
            <span asp-validation-for="@Model.price" class="text-danger"></span>
        </label>
        <input asp-for="@Model.price" class="form-control" />
    </div>

    <div class="form-group">
        <label>
            Age:

            <span class="text-danger">*</span>
            <span asp-validation-for="@Model.age" class="text-danger"></span>
        </label>
        <input asp-for="@Model.age" class="form-control" />
    </div>


    <div class="form-group text-right">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>

</form>

@section Scripts{


    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="\node_modules\jquery-validation-unobtrusive\dist\jquery.validate.unobtrusive.min.js"></script>
}
