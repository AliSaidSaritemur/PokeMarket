@{

    Layout = "_Layout";
}
@using PokemonsMarketWeb.Models

@model List<Pokemon>
@{
    string path = Directory.GetCurrentDirectory()+ "wwwroot/";
    ViewData["PokeId"] = "0";
    User user = ViewBag.user;
}


<html>
<head>


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }


}
.bord {
  border:solid 5px hsla(0, 95%, 35%, 1);
}

        .column {
            float: left;
            width: 33.33%;
            padding: 10px;
            height: 315px; 
        }

      
        .row:after {
            content: "";
            display: table;
            clear: both;
        }
        .center {
  border: 1px ;
  display: flex;
  justify-content: center;
}
    </style>
</head>
<body>

    <h3 class="center border border-dark"><label key=5>Wallet</label>: @user.wallet $  </h3>
    <form asp-action="Buy" method="post">
    @for (int i = 0; i < Model.Count; i += 3)
    {

        <div class="row ">


            <div class="column  border border-info" >
                 <a class="d-flex justify-content-center" asp-action="Detail" asp-route-fileName="@Model[i].id"> <img src="/Image/@(Model[i].species).jpg" width=40% height=40%></a>
              
                <b class="d-flex justify-content-center">  @Model[i].name</b>
                    <p class="d-flex justify-content-center p-3 mb-2 bg-success text-white rounded ">  @Model[i].price ₺</p>
                    <a key=10 style="text-decoration: none" class="d-flex rounded justify-content-center p-3 mb-2 bg-warning text-dark" asp-action="Buy" asp-route-fileName="@Model[i].id">Buy</a>
                    

            </div>
            @if (i + 1 < Model.Count)
            {
                <div class="column border border-info" >

                        <a class="center" asp-action="Detail" asp-route-fileName="@Model[i+1].id"><img src="/Image/@(Model[i+1].species).jpg" width=40% height=40%></a>
                       <b class="center"> @Model[i+1].name</b>
                        <p class="center p-3 mb-2 bg-success text-white rounded ">  @Model[i+1].price ₺</p>
                        <a key=10  style="text-decoration: none" class="center rounded  p-3 mb-2 bg-warning text-dark" asp-action="Buy" asp-route-fileName="@Model[i+1].id">Buy</a>
                        
                    </div>
            }
            @if (i + 2 < Model.Count)
            {

                <div class="column border border-info">
                        <a class="center" asp-action="Detail" asp-route-fileName="@Model[i+2].id"><img src="/Image/@(Model[i+2].species).jpg" width=40% height=40%></a>
                        <b class="center">  @Model[i+2].name</b>
                        <p class="center rounded p-3 mb-2 bg-success text-white">  @Model[i+2].price ₺</p>
                        <a key=10  style="text-decoration: none" class="center rounded p-3 mb-2 bg-warning text-dark" asp-action="Buy" asp-route-fileName="@Model[i+2].id">Buy</a>
                       
                </div>
            }
        </div>
        <br />
    }
   </form>
</body>
</html>
        
@section Scripts{


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>

    <script src="/js/script.js"></script>
}
         


