@{

    Layout = "_Layout";
}
@using PokemonsMarketWeb.Models

@model List<Pokemon>
@{
    string path = Directory.GetCurrentDirectory()+ "wwwroot/";
    ViewData["PokeId"] = "0";
}


<html>
<head>


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }


}
.bord {
  border:solid 5px hsla(0, 95%, 35%, 1);
}

        .column {
            float: left;
            width: 33.33%;
            padding: 10px;
            height: 335px; 
        }

      
        .row:after {
            content: "";
            display: table;
            clear: both;
        }
        .center {
  border: 1px ;
  display: flex;
  justify-content: center;
}
    </style>
</head>
<body>
    <form asp-action="Buy" method="post">
    @for (int i = 0; i < Model.Count; i += 3)
    {

        <div class="row ">


            <div class="column  border border-info" >
                   <p class="d-flex justify-content-center" > <img src="/Image/@(Model[i].name).jpg" width=40% height=40%></p>
              
                <p class="d-flex justify-content-center">  @Model[i].name</p>
               <p class="d-flex justify-content-center">  <a  asp-action="Detail" asp-route-fileName="@Model[i].id">Detail</a></p>
                  <a class="d-flex justify-content-center" asp-action="Buy" asp-route-fileName="@Model[i].id">Buy</a>
                    <p class="d-flex justify-content-center">  @Model[i].price</p>

            </div>
            @if (i + 1 < Model.Count)
            {
                <div class="column border border-info" >

            <p class="center"> <img src="/Image/@(Model[i+1].name).jpg" width=40% height=40%></p>

                       <p class="center"> @Model[i+1].name</p>
                        <p class="center"><a asp-action="Detail" asp-route-fileName="@Model[i+1].id">Detail</a></p>
                       <a class="center" asp-action="Buy" asp-route-fileName="@Model[i+1].id">Buy</a>
                        <p class="center">  @Model[i+1].price</p>
                    </div>
            }
            @if (i + 2 < Model.Count)
            {

                <div class="column border border-info">
                    <p class="center"> <img src="/Image/@(Model[i+2].name).jpg" width=40% height=40%></p>
                  
                    <p class="center">  @Model[i+2].name</p>
                       <p class="center"><a asp-action="Detail" asp-route-fileName="@Model[i+2].id">Detail</a></p>
                     <a  class="center" asp-action="Buy" asp-route-fileName="@Model[i+2].id">Buy</a>
                        <p class="center">  @Model[i+2].price</p>
                </div>
            }
        </div>
        <br />
    }
   </form>
</body>
</html>
        

         


