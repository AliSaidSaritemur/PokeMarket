@{
    Layout = "_Layout";
}
@using PokemonsMarketWeb.Models

@model User
<h3>Balance Boading</h3>

<form asp-action="balanceLoading" asp-controller="Home" method="post">

    <div class="form-group">
        <br>
        <label>
            <h5 key=29>Balance:</h5>
        </label>
        <input asp-for="@Model.wallet" class="form-control" />
        <span asp-validation-for="@Model.wallet" class="text-danger"></span>
    </div>
    <div class="form-group text-right">
        <button type="submit" class="center btn btn-primary" key=18>Load</button>
    </div>
    </div>

</form>


